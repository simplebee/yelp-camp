<% include ../partials/header %>

<div class="container">
  <div class="row">
    <h1 class="text-center">Add New Comment To <%= campgroundData.name %></h1>

    <form action="/campground/<%= campgroundData._id %>/comment" method="POST" class="new-form">
      <div class="form-group">
        <input type="text" name="comment[text]" class="form-control" placeholder="text">
      </div>
      <div class="form-group">
        <button class="btn btn-primary btn-lg btn-block">Submit</button>
      </div>
      <a href="/campground/<%= campgroundData._id %>">Go Back</a>
    </form>
  </div>
</div>

<% include ../partials/footer %>