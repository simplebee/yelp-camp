<% include ../partials/header %>

<div class="container">
  <div class="row">
    <h1 class="text-center">Edit Comment</h1>

    <form action="/campground/<%= campgroundID %>/comment/<%= commentData._id %>?_method=PUT" method="POST" class="new-form">
      <div class="form-group">
        <input type="text" name="comment[text]" class="form-control" value="<%= commentData.text %>" placeholder="text">
      </div>
      <div class="form-group">
        <button class="btn btn-primary btn-lg btn-block">Submit</button>
      </div>
      <a href="/campground/<%= campgroundID %>">Go Back</a>
    </form>
  </div>
</div>

<% include ../partials/footer %>