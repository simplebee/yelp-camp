<% include partials/header %>

<div class="container">
  <header class="jumbotron">
    <h1>Campgrounds</h1>
    <p>Hand picked campgrounds from all over the world</p>
    <a class="btn btn-primary btn-lg" href="/campground/new">Add new campground</a>
  </header>

  <div class="photo-grid row text-center">
    <% campground.forEach(function(site) { %>
      <div class="col-md-3 col-sm-6">
        <div class="thumbnail">
          <img src="<%= site.image %>" alt="<%= site.name %>">
          <div class="caption">
            <h4>
              <%= site.name %>
            </h4>
          </div>
        </div>
      </div>
      <% }); %>
  </div>
</div>

<% include partials/footer %>