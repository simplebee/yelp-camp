<% include ../partials/header %>
<% include ../partials/nav %>

<div class="container">
  <div class="row">
    <h1 class="text-center">Add New Campground</h1>

    <form action="/campground" method="POST" class="new-form">
      <div class="form-group">
        <input type="text" name="campground[name]" class="form-control" placeholder="name">
      </div>
      <div class="form-group">
        <input type="number" name="campground[price]" class="form-control" min="0.01" step="0.01" placeholder="price">
      </div>
      <div class="form-group">
        <input type="text" name="campground[image]" class="form-control" placeholder="image url">
      </div>
      <div class="form-group">
        <input type="text" name="campground[description]" class="form-control" placeholder="description">
      </div>
      <div class="form-group">
        <button class="btn btn-primary btn-lg btn-block">Submit</button>
      </div>
      <a href="/campground">Back to Campgrounds</a>
    </form>
  </div>
</div>

<% include ../partials/footer %>