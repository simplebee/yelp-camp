<% include ../partials/header %>

<div class="container">
  <div class="row">
    <div class="col-md-3">
      <h4>Yelp Camp</h4>
      <ul class="list-group">
        <li class="list-group-item">item</li>
        <li class="list-group-item">item</li>
        <li class="list-group-item">item</li>
      </ul>
    </div>
    <div class="col-md-9">
      <div class="thumbnail">
        <img class="img-responsive" src="<%= campgroundData.image %>" alt="<%= campgroundData.name %>">
        <div class="caption">
          <h3 class="pull-right">Â£10.00/night</h3>
          <h3><a href="#"><%= campgroundData.name %></a></h3>
          <p><%= campgroundData.description %></p>
        </div>
      </div>
      <div class="well">
        <div class="text-right">
          <a class="btn btn-success" href="/campground/<%= campgroundData._id %>/comment/new">Add New Comment</a>
        </div>
        <hr>
        <% campgroundData.comment.forEach(function(comment) { %>
          <span class="pull-right"><em>12/02/17</em></span>
          <div><strong><%= comment.author.username %></strong></div>
          <p><%= comment.text %></p>
        <% }); %>
      </div>
    </div>
  </div>  
</div>

<% include ../partials/footer %>