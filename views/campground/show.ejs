<% include ../partials/header %>

<h1><%= campgroundData.name %></h1>
<img src="<%= campgroundData.image %>" alt="<%= campgroundData.name %>">
<p><%= campgroundData.description %></p>

<% campgroundData.comment.forEach(function(comment) { %>
  <p><%= comment.author %> - <%= comment.text %></p>
<% }); %>

<a class="btn btn-primary" href="/campground/<%= campgroundData._id %>/comment/new">Add New Comment</a>
<a class="btn btn-primary" href="/campground">Back to Campgrounds</a>

<% include ../partials/footer %>